@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] TraditionalRx </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="nav-bar">
        <div class="logo">
            Diabetes Rx
        </div>
        <ul class="nav-link">
            <li><a class="active" href="/Home/Index">Home</a></li>
            <li><a href="/Home/About">About</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a href="#"> Admin <i class="fa fa-caret-down"></i></a>

                    <ul class="dropdown-nav-link">
                        <li><a href="/Category/Add">Category</a></li>
                        <li><a href="/Medicine/Add">Medicine</a></li>
@*                         <li><a href="/UserAuthentication/Manage">Users </a></li>
 *@                        <li><a href="/UserAuthentication/Logout">Logout</a></li>
                    </ul>
                </li>
            }
            @if (!string.IsNullOrEmpty(User.Identity.Name) && User.IsInRole("user"))
            {
                <li>
                    <a href="#">@username <i class="fa fa-caret-down"></i></a>

                    <ul class="dropdown-nav-link">
                        <li><a href="/UserAuthentication/Logout">Logout</a></li>
                        <li><a href="/UserAuthentication/ChangePassword">Change Password</a></li>
                    </ul>
                </li>
                
            }
            @if (string.IsNullOrEmpty(User.Identity.Name))
            {
                <li><a href="/UserAuthentication/Login">Login</a></li>
                <li><a href="/UserAuthentication/Registration">Signup</a></li>
            }
        </ul>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        &#169; @DateTime.UtcNow.Year Omaima Subbooh
        <a href="/Home/Privacy">Privacy</a>
    </footer>
</body>
</html>