@model TraditionalRx.Models.DTO.RegistrationModel
@{
    ViewData["Title"] = "Registration";
}
@Html.ValidationSummary()

<form class="w-50" asp-action="Registration" method="post">
    <h2 class="pb-10">Registration</h2>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="input-container">
        <label asp-for="Email" class="w-40">E-mail</label>
        <input type="text" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="input-container">
        <label asp-for="Username" class="w-40">Username</label>
        <input type="text" class="input" asp-for="Username">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Username"></span>
    </div>

   
    <div class="input-container">
        <label asp-for="Password" class="w-40" >Password* (eg. John@123)</label>
        <input type="password" class="input" asp-for="Password" placeholder="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="input-container">
        <label asp-for="PasswordConfirm" class="w-40">Password Confirm*</label>
        <input type="password" class="input" asp-for="PasswordConfirm" placeholder="Confirm Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
             
                
    @if (TempData["msg"] != null)
    {
        <div class="form-group">
            <span class="text-info">@TempData["msg"]</span>
        </div>
    }

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-default">Registration</button>
        <button class="btn btn-default" asp-controller="UserAuthentication" asp-action="Login">
            Login
        </button>
    </div>
</form>
